@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "List of Products";
    int thisPageNumber = (int)ViewData["CurrentPage"];
    string Search = ViewData["Search"].ToString();
    int pagesCount = (int)ViewData["PagesCount"];
    string PrevButtonStatus = thisPageNumber <= 1 ? "disabled" : "";
    string NextButtonStatus = thisPageNumber >= pagesCount ? "disabled" : "";
    int navbarMaxItems = 15;
}

<h1>Products</h1>

    <div class="btn-group mb-1">
        <a asp-action="Create" asp-route-pageNum="@(thisPageNumber)" asp-route-SearchText="@(Search)" class="btn btn-danger rounded mr-2 rounded"><i class="material-icons align-text-top">add_circle_outline</i>&nbsp; Create</a>
        <form method="post">
            <div class="btn-group">
                <button type="submit" class="btn btn-primary mr-1 rounded btn-group w-75"><i class="material-icons align-text-top">search</i>&nbsp; Search</button>
                <input type="text" id="TextToSearch" value="@(Search)" name="TextToSearch" placeholder="Search" class="form-control" />
            </div>
        </form>
    </div>
    <nav>
        <ul class="pagination">
            <li class="page-item @PrevButtonStatus">
                <a class="page-link" asp-action="Index" asp-route-Id="@(thisPageNumber==1?thisPageNumber: thisPageNumber - 1)" asp-route-SearchText="@(Search)" tabindex="-1">Previous</a>
            </li>
            @{
                if (pagesCount <= navbarMaxItems)
                {
                    for (int i = 1; i <= pagesCount; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                }
                else
                {
                    for (int i = 1; i <= navbarMaxItems / 2; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                    for (int i = pagesCount - (navbarMaxItems / 2) + 1; i <= pagesCount; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                }
            }

            <li class="page-item @NextButtonStatus">
                <a class="page-link" asp-action="Index" asp-route-Id="@(thisPageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>

@if (Model == null || Model.Count() == 0)
{
    <h3>Nothing to show</h3>
}
else
{
    <table class="table table-striped table-hover text-center table-sm table-bordered" style="table-layout:fixed">
        <thead class="bg-dark text-white">
            <tr>
                <th style="width:5%">
                    ID
                </th>
                <th style="width:26%" class="align-middle">
                    Product Name
                </th>
                <th hidden class="align-middle">
                    Buy Price
                </th>
                <th style="width:8%" class="align-middle">
                    Sell Price
                </th>
                <th hidden>
                    Barcode
                </th>
                <th style="width:10%" class="align-middle">
                    Count
                </th>
                <th style="width:7%" class="align-middle">
                    Date Created
                </th>
                <th style="width:7%" class="align-middle">
                    Time Created
                </th>
                <th style="width:7%" class="align-middle">
                    Date Updated
                </th>
                <th style="width:7%" class="align-middle">
                    Time Updated
                </th>
                <th style="width:14%" class="align-middle">
                    Descriptions
                </th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="height:10px">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.BuyPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SellPrice)
                    </td>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Barcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountString)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeUpdated)
                    </td>
                    <td class="overflow-auto">
                        @Html.DisplayFor(modelItem => item.Descriptions)
                    </td>
                    <td class="text-left">
                        <div class="w-50 btn-group" role="group">
                            <div id="delete_@(item.Id)" class="w-50 btn-group">
                                <a asp-action="Edit" asp-route-Id="@(item.Id)" asp-route-pageNum="@(thisPageNumber)" asp-route-SearchText="@(Search)" class="btn btn-outline-primary rounded btn-sm mr-1">Edit</a>
                                <button onclick="ToggleConfirmDelete(@(item.Id), true)" class="btn btn-outline-danger rounded btn-sm">Delete</button>
                            </div>
                            <div id="confirmDelete_@(item.Id)" class="w-50 btn-group" style="display:none">
                                <form asp-action="Delete" asp-route-Id="@(item.Id)" asp-route-pageNum="@(thisPageNumber)" asp-route-SearchText="@(Search)" method="post">
                                    <button type="submit" class="btn btn-danger rounded btn-sm">Yes</button>
                                </form>
                                <button onclick="ToggleConfirmDelete(@(item.Id), false)" class="btn btn-primary rounded btn-sm ml-1">No</button>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav>
        <ul class="pagination">
            <li class="page-item @PrevButtonStatus">
                <a class="page-link" asp-action="Index" asp-route-Id="@(thisPageNumber==1?thisPageNumber: thisPageNumber - 1)" asp-route-SearchText="@(Search)" tabindex="-1">Previous</a>
            </li>
            @{
                if (pagesCount <= navbarMaxItems)
                {
                    for (int i = 1; i <= pagesCount; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                }
                else
                {
                    for (int i = 1; i <= navbarMaxItems / 2; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                    <li class="page-item disabled">
                        <a class="page-link">...</a>
                    </li>
                    for (int i = pagesCount - (navbarMaxItems / 2) + 1; i <= pagesCount; i++)
                    {
                        <li class="page-item @(i == thisPageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-Id="@i" asp-route-SearchText="@(Search)">@i<span class="sr-only">(current)</span></a>
                        </li>
                    }
                }
            }

            <li class="page-item @NextButtonStatus">
                <a class="page-link" asp-action="Index" asp-route-Id="@(thisPageNumber + 1)">Next</a>
            </li>
            <li class="ml-2"><button class="page-link" onclick="GotoTopOfPage()">Goto Top</button></li>
        </ul>
    </nav>
}
@section Scripts{
    <script src="~/js/MyScripts.js"></script>
<script>
    function GotoTopOfPage() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
}