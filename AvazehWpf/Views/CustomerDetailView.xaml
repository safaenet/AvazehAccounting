<Window x:Class="AvazehWpf.Views.CustomerDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:AvazehWpf" mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" fw:AcrylicWindow.Enabled="True"
        Title="Customer" FontFamily="Tahoma" WindowStartupLocation="CenterScreen"
        Width="460" MaxWidth="460" MinHeight="395" Height="500" fw:AcrylicWindow.AcrylicWindowStyle="NoIcon"
        cal:Message.Attach="[Event Closing] = [Action ClosingWindow]">
    <Grid fw:PointerTracker.Enabled="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="3"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="3"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="Margin" Value="0,2,0,2"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10" VerticalAlignment="Top">
                        <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Account" Margin="0,2,5,2"/>
                            <TextBlock MaxWidth="200" TextAlignment="Center" Text="First Name" Margin="0,2,0,2"/>
                        </StackPanel>
                        <TextBox Text="{Binding BackupCustomer.FirstName}" MaxLength="50" MaxWidth="200"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10" VerticalAlignment="Top">
                        <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CardAccountDetails" Margin="0,2,5,2"/>
                            <TextBlock MaxWidth="200" TextAlignment="Center" Text="Last Name" Margin="0,2,0,2"/>
                        </StackPanel>
                        <TextBox Text="{Binding BackupCustomer.LastName}" MaxLength="50" MaxWidth="200"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
                        <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Domain" Margin="0,2,5,2"/>
                            <TextBlock MaxWidth="200" TextAlignment="Center" Text="Company Name" Margin="0,2,0,2"/>
                        </StackPanel>
                        <TextBox Text="{Binding BackupCustomer.CompanyName}" MaxLength="50" MaxWidth="200"/>
                    </StackPanel>

                    <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Vertical" Margin="0,0,0,10">
                        <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Email" Margin="0,2,5,2"/>
                            <TextBlock MaxWidth="200" TextAlignment="Center" Text="Email Address" Margin="0,2,0,2"/>
                        </StackPanel>
                        <TextBox Text="{Binding BackupCustomer.EmailAddress}" MaxLength="50" MaxWidth="200"/>
                    </StackPanel>
                    
                    <DockPanel Grid.Column="0" Grid.Row="4" LastChildFill="True" DockPanel.Dock="Bottom">
                        <StackPanel DockPanel.Dock = "Top" Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="MapMarker" Margin="0,2,5,2"/>
                            <TextBlock MaxWidth="200" TextAlignment="Center" Text="Post Address" Margin="0,2,0,2"/>
                        </StackPanel>
                        <TextBox Text="{Binding BackupCustomer.PostAddress}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MinHeight="30" Height="auto" VerticalContentAlignment="Top" BorderThickness="1" MaxWidth="200"/>
                    </DockPanel>
                </Grid>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                    <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="CardAccountDetails" Margin="0,2,5,2"/>
                        <TextBlock MaxWidth="200" TextAlignment="Center" Text="ID" Margin="20,2,0,2"/>
                    </StackPanel>
                    <TextBox Text="{Binding BackupCustomer.Id}" IsReadOnly="True" MaxLength="10" MaxWidth="200"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
                    <StackPanel Width="110" Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="DateRange" Margin="0,2,5,2"/>
                        <TextBlock MaxWidth="200" TextAlignment="Center" Text="Date Joined" Margin="0,2,0,2"/>
                    </StackPanel>
                    <TextBox Text="{Binding BackupCustomer.DateJoined}" IsReadOnly="True" MaxLength="10" MaxWidth="200"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
                    <StackPanel Width="165" Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Phone" Margin="0,2,5,2"/>
                        <TextBlock MaxWidth="200" TextAlignment="Center" Text="Phone Number(s)" Margin="0,2,0,2"/>
                        <Button x:Name="AddNewPhoneNumber" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="5,0,0,0">
                            <materialDesign:PackIcon Kind="Plus"/>
                        </Button>
                        <Button x:Name="DeletePhoneNumber" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="5,0,0,0">
                            <materialDesign:PackIcon Kind="Minus"/>
                        </Button>
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Customer.PhoneNumbers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding Path=PhoneNumber}" Width="165" Margin="14,3,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <DockPanel LastChildFill="True"  Grid.Row="3" DockPanel.Dock="Bottom">
                    <StackPanel DockPanel.Dock = "Top" Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="CommentAccount" Margin="0,2,5,2"/>
                        <TextBlock MaxWidth="200" TextAlignment="Center" Text="Description" Margin="0,2,0,2"/>
                    </StackPanel>
                    <TextBox Text="{Binding BackupCustomer.Descriptions}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MinHeight="50" Height="auto" VerticalContentAlignment="Top" BorderThickness="1" MaxWidth="200"/>
                </DockPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="CancelAndClose" Grid.Column="0" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="0,5,5,0">
                <StackPanel Width="80" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cancel" Margin="3"/>
                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="DeleteAndClose" Grid.Column="1" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="0,5,5,0">
                <StackPanel Width="120" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Delete" Margin="3"/>
                    <TextBlock Text="Delete and Close" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="SaveAndNew" Grid.Column="2" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="0,5,5,0">
                <StackPanel Width="110" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSaveMove" Margin="3"/>
                    <TextBlock Text="Save and New" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button x:Name="SaveAndClose" Grid.Column="3" Style="{StaticResource ButtonRevealStyle}" Background="Transparent" Margin="0,5,5,0">
                <StackPanel Width="110" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ContentSaveOff" Margin="3"/>
                    <TextBlock Text="Save and Close" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
