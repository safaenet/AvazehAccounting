                                    <CheckBox Content="چاپ فاکتور" IsChecked="{Binding User_DTO.Permissions.CanPrintInvoice, Mode=TwoWay}" Margin="5,0,0,0" VerticalContentAlignment="Center"/>
                                    <CheckBox Content="چاپ فایل" IsChecked="{Binding User_DTO.Permissions.CanPrintTransaction, Mode=TwoWay}" Grid.Column="1" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
                                    <CheckBox Content="استفاده از بارکدخوان" IsChecked="{Binding User_DTO.Permissions.CanUseBarcodeReader, Mode=TwoWay}" Grid.Column="2" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
                                    
                                    <CheckBox Content="تغییر مشخصات خود" IsChecked="{Binding User_DTO.Permissions.CanManageItself, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
                                    <CheckBox Content="تغییر مشخصات دیگران" IsChecked="{Binding User_DTO.Permissions.CanManageOthers, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="5,0,5,0" VerticalContentAlignment="Center"/>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="SaveSettingsAsync" Grid.Row="1" Content="ذخیره" Height="25" Margin="5,5,5,5"/>
        <Button x:Name="CloseWindow" Grid.Row="2" Content="بستن" Height="25" Margin="5,0,5,5"/>
    </Grid>
</Window>
